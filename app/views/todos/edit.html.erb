<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ToDo 編集
      </h1>
    </div>
  </div>
</section>

<% if @todo.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@todo.errors.count, "Error！") %> 仕事内容入力して下さい。 </h2>
    <ul>
      <% @todo.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @todo do |f| %>
          <div class="field">
            <%= f.label :title, "仕事", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "詳細", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          

          <%= f.submit '更新', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
